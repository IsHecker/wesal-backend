{
  "ConnectionStrings": {
    "Database": "Server=DESKTOP-7C1AVIR\\SQLEXPRESS;Database=Wesal;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "BackgroundJobs": {
    "GenerateVisitationSessions": {
      "Enabled": true,
      "BatchSize": 100,
      "RunIntervalInMinutes": 0.50,
      "GenerateForNextDays": 90
    },
    "GeneratePaymentDues": {
      "Enabled": true,
      "BatchSize": 100,
      "RunIntervalInMinutes": 1,
      "GenerateForNextDays": 12
    },
    "DetectMissedVisitations": {
      "Enabled": true,
      "RunIntervalInMinutes": 1,
      "VisitationGracePeriodMinutes": 12
    },
    "DetectOverdueAlimonyPayments": {
      "Enabled": true,
      "RunIntervalInMinutes": 1
    }
  }
}